@model Movie
@{
    ViewData["Title"] = "Movie Details";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">@Model.Name</h2>
        </div>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">
                    Image
                </th>
                <th scope="col">
                    Name
                </th>
                <th scope="col">
                    Producer
                </th>
                <th scope="col">
                    Bio
                </th>
                <th scope="col">
                    Price
                </th>
                <th scope="col">
                    Category
                </th>
            </tr>
        </thead>
        <tbody>
            <tr class="table-primary">
                <td scope="row">
                    <img class="rounded-circle" src="@Model.imageSrc" alt="@Model.Name" style="width:170px; height:170px; max-width:100%" />
                </td>
                <td scope="row">
                    @Model.Name
                </td>
                <td scope="row">
                    @Model.Producer.Name
                </td>
                <td width="50%">
                    @Model.Bio
                </td>
                <td scope="row">
                    @Model.price$
                </td>
                <td scope="row">
                    @Model.MoiveCategory
                </td>
            </tr>
        </tbody>
    </table>
</div>