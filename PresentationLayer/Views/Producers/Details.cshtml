@model Producer

@{
    ViewData["Title"] = "Producer";
}

<div class="container p-3">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">
                    Image
                </th>
                <th scope="col">
                    Name
                </th>
                <th scope="col">
                    Bio
                </th>
            </tr>
        </thead>
        <tbody>
            <tr class="table-primary">
                <td scope="row">
                    <img class="rounded-circle" src="@Model.imageSrc" alt="@Model.Name" style="width:170px; height:170px; max-width:100%" />
                </td>
                <td scope="row">
                    @Model.Name
                </td>
                <td width="50%">
                    @Model.Bio
                </td>
            </tr>
        </tbody>
    </table>
</div>